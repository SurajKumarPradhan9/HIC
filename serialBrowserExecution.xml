<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="HIC Full Test Suite">
    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>
    <test name="All TestCases In testCases Package executing in chrome browser">
        <parameter name="os" value="windows"/>
        <parameter name="browser" value="chrome"/>

        <packages>
            <package name="testCases"/>
        </packages>
    </test>
    <test name="All TestCases In testCases Package executing in edge browser">
        <parameter name="os" value="windows"/>
        <parameter name="browser" value="edge"/>

        <packages>
            <package name="testCases"/>
        </packages>
    </test>
</suite>